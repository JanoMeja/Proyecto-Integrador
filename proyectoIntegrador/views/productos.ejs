<%- include('./partials/head') %>

    <%- include('./partials/header') %>
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Novedades</h2>
                </div>
                <!-- Show the "ultimos" products -->
                <% for( let i=0; i< 5; i++ ) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/productos/detalle-productos">
                                <figure class="product-box_image">
                                    <img src="<%= listaProductos[i].img %>" alt="imagen" width="100%" class="tamano">
                                </figure>
                                <article class="product-box_data">
                                    <h3 class="text">
                                        <%= listaProductos[i].nombre %>
                                        <%= listaProductos[i].descripcion %>
                                    </h3>
                                </article>
                            </a>
                        </section>
                    </div>
                    <% } %>
                        <div class="col-12">
                            <h2 class="products-title">Mas Comentadas</h2>
                        </div>
                        <% for( let i=5;i< listaProductos.length; i++ ) { %>
                            <div class="col-12 col-sm-6 col-lg-3">
                                <section class="product-box">
                                    <a href="/productos/detalle-productos">
                                        <figure class="product-box_image">
                                            <img src="<%= listaProductos[i].img %>" alt="imagen" width="100%" class="tamano">
                                        </figure>
                                        <article class="product-box_data">
                                            <h3 class="text">
                                                <%= listaProductos[i].nombre %>
                                                <%= listaProductos[i].descripcion %>
                                            </h3>
                                        </article>
                                    </a>
                                </section>
                            </div>
                            <% } %>
            </div>
        </div>
        <%- include('./partials/footer') %>