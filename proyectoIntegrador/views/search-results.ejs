<%- include('./partials/head') %>
    <%- include('./partials/header') %>
        <div class="container products-wrapper">
            <div class="row">
                <% for( let i = 0; i < listaProductos.length; i++ ) { %>
                    <div class="col-12">
                        <a href="/productos/detalle-productos/<%= listaProductos[i].id %>">
                            <h2 class="products-title"><%= listaProductos[i].nombre %></h2>
                            <figure class="product-box_image">
                                <img src="<%= listaProductos[i].img %>" alt="imagen" width="100%" class="tamano">
                            </figure>
                        </a>
                    </div>
                  <% } %>
                
                <!-- Show the "ultimos" products -->
            </div>
        </div>
        <%- include('./partials/footer') %>