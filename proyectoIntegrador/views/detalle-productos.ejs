<%- include('./partials/head') %>

    <%- include('./partials/header') %>
        <!-- product detail -->
            <div class="container products-wrapper">
                <div class="d-flex align-items-center">
                    <h2 class="products-title">
                        <%= producto.nombre %>
                    </h2>
                    <p class="product-detail-description">
                        <a href="/productos/aniadir-productos">Editar</a>
                    </p>
                </div>
                <div class="product-detail">
                    <div class="row">
                        <article class="col-12 col-lg-8 product-detail-info">
                            <img src="<%= producto.img %>" alt="" width="100%" class="product-detail-img">
                            <p class="product-detail-description">
                                Descripcion: <%= producto.descripcion %>
                            </p>
                        </article>
                       
                        <div class="col-12 col-lg-4">
                        
                                    <section class="comments">
                                        <% for( let i=0; i<  producto.comentario.length; i++ ) { %>
                                        <article>
                                            <img src="<%= producto.comentario[i].usuario.fotoDePerfil %>" alt="">
                                            <div class="data">
                                                <p class="user">
                                                    <strong> <a href="/users/profile">
                                                        <%=producto.comentario[i].usuario.usuario  %>
                                                        </a> </strong> <%= producto.comentario[i].comentarios %>

                                                </p>
                                            </div>
                                        </article>
                                        <% } %>
                                    </section>
                            
                                        <form class="form" action="" method="POST">
                                            <input class="form-input" type="text" value=""
                                                placeholder="Agregar comentario">
                                            <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                                        </form>
                                        <hr>
                            </div> 
                          
                    </div>
                </div>
            </div>
                <!-- /product detail -->
                <%- include('./partials/footer') %>